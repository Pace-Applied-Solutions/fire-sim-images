# Mapbox Configuration
# Get a free token from https://account.mapbox.com/
VITE_MAPBOX_TOKEN=your_mapbox_token_here

# Application Insights (Optional - for telemetry and monitoring)
# Get connection string from Azure Portal > Application Insights > Properties
VITE_APPLICATIONINSIGHTS_CONNECTION_STRING=your_app_insights_connection_string_here

# Microsoft Entra External ID Configuration (CIAM)
# Get these values from Azure Portal > Entra External ID > App Registrations
VITE_ENTRA_CLIENT_ID=your_entra_client_id_here
VITE_ENTRA_TENANT_ID=your_entra_tenant_id_here
VITE_ENTRA_AUTHORITY=https://login.microsoftonline.com/your_tenant_id_here

# Stripe Configuration
# Get these keys from Stripe Dashboard (https://dashboard.stripe.com/apikeys)
# Use test keys for development, live keys for production
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret_here
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Product IDs (create these in Stripe Dashboard)
STRIPE_PRODUCT_ID_STARTER=prod_your_starter_product_id
STRIPE_PRODUCT_ID_PROFESSIONAL=prod_your_professional_product_id
STRIPE_PRODUCT_ID_OVERAGE_PACK=prod_your_overage_pack_product_id

# Stripe Meter IDs (create these in Stripe Dashboard for usage tracking)
STRIPE_METER_ID_SCENARIOS=mtr_your_scenarios_meter_id
STRIPE_METER_ID_IMAGES=mtr_your_images_meter_id
STRIPE_METER_ID_VIDEOS=mtr_your_videos_meter_id
