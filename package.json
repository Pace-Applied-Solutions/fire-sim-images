{
  "name": "fire-sim-images",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered bushfire simulation inject tool for rural fire service training",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:full",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "npm run build --workspace=packages/shared && npm run dev --workspace=apps/api",
    "dev:full": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "build": "npm run build --workspaces",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
