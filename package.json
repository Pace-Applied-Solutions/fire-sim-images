{
  "name": "fire-sim-images",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered bushfire simulation inject tool for rural fire service training",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:full",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "npm run build --workspace=packages/shared && npm run dev --workspace=apps/api",
    "dev:full": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:swa": "swa start http://localhost:5173 --api-location http://localhost:7071 --port 4280",
    "dev:swa:full": "concurrently \"npm run dev:web\" \"npm run dev:api\" \"npm run dev:swa\"",
    "predev:swa:full": "node scripts/check-node-version.js",
    "build": "npm run build --workspace=packages/shared && npm run build --workspace=apps/api && npm run build --workspace=apps/web",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test --workspace=packages/shared --workspace=apps/api --workspace=apps/web",
    "test:integration": "npm run test --workspace=apps/api -- --run integration",
    "test:e2e": "npm run test --workspace=apps/web -- --run e2e",
    "test:coverage": "npm run test:coverage --workspaces --if-present"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "msw": "^2.12.10",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
